#:kivy 2.0.0

# TODO:
#    * Make it functional
#    * Prettify the layout
#    * reStructuredText render for Headings Maybe

<RootWidget>:
    orientation: 'vertical'

    #################
    ## Interaction ##
    #################

    Label:
        text: 'Vocabulary Trainer'

    BoxLayout:
        orientation: 'vertical'
        # Language Direction: German -> Russian or German <- Russian
        # TODO:
        #     * Populate the language labels from CSV
        #     * Populate the text input randomly from csv
        #     * Allow to check for Input (at a later stage)

        Label:
            text: root.lang1head

        TextInput:
            disabled: True

        Label:
            text: root.lang2head

        TextInput:
            disabled: True

        BoxLayout:
            # Main interaction button
            orientation: 'horizontal'

            Button:
                text: 'Next'
                on_press: print(root.vocab)

            Button:
                text: 'Show'
                on_press: print(root.headers)

    ##############
    ## SETTINGS ##
    ##############

    Label:
        text: 'Settings'

    BoxLayout:
        orientation: 'vertical'

        Label:
            text: 'Sprachenrichtung'

        BoxLayout:
            # Language Direction: German -> Russian or German <- Russian
            # TODO:
            #     * Populate the language labels from CSV
            #     * Toggle button between -> and <-
            #     * based on Button text unhide one language or the other

            orientation: 'horizontal'

            Label:
                text: root.lang1head

            Button:
                text: '->'

            Label:
                text: root.lang1head


        Label:
            text: 'Wortart'

        BoxLayout:
            orientation: 'horizontal'

            ToggleButton:
                # populate from csv file
                # grey out if not available in CSV file
                text: 'Alle'
                group: 'Wortart' # Populate from CSV heading
                state: 'down'

            ToggleButton:
                # populate from csv file
                # grey out if not available in CSV file
                text: 'Nomen'
                group: 'Wortart' # Populate from CSV heading

            ToggleButton:
                # populate from csv file
                # grey out if not available in CSV file
                text: 'Adjektiv'
                group: 'Wortart' # Populate from CSV heading

            ToggleButton:
                # populate from csv file
                # grey out if not available in CSV file
                text: 'Verb'
                group: 'Wortart' # Populate from CSV heading

            ToggleButton:
                # populate from csv file
                # grey out if not available in CSV file
                text: 'Andere'
                group: 'Wortart' # Populate from CSV heading

        Label:
            text: 'Lektion' # Populate from CSV or grey out if not available

        Spinner:
            id: td_spin
            text: 'All'
            values: root.lessons

    Button:
        text: 'Quit'
