<RootWidget>:
    orientation: 'vertical'

    Label:
        text: 'Vocabulary Trainer'

    BoxLayout:
        orientation: 'vertical'
        # Language Direction: German -> Russian or German <- Russian
        # TODO:
        #     * Populate the language labels from CSV
        #     * Populate the text input randomly from csv
        #     * Allow to check for Input (at a later stage)

        Label:
            text: 'Placeholder - Language 1 - populated by csv file'

        TextInput:
            disabled: True

        Label:
            text: 'Placeholder - Language 2 - populated by csv file'

        TextInput:
            disabled: True

        BoxLayout:
            # Main interaction button
            orientation: 'horizontal'

            Button:
                text: 'Next'

            Button:
                text: 'Show'

    Label:
        text: 'Settings'

    BoxLayout:
        orientation: 'vertical'

        Label:
            text: 'Sprachenrichtung'

        BoxLayout:
            # Language Direction: German -> Russian or German <- Russian
            # TODO:
            #     * Populate the language labels from CSV
            #     * Toggle button between -> and <-
            #     * based on Button text unhide one language or the other

            orientation: 'horizontal'

            Label:
                text: 'Lang1'

            Button:
                text: '->'

            Label:
                text: 'Lang2'


        Label:
            text: 'Wortart'

        BoxLayout:
            orientation: 'horizontal'

            ToggleButton:
                # populate from csv file
                # grey out if not available in CSV file
                text: 'Alle'
                group: 'Wortart' # Populate from CSV heading
                state: 'down'

            ToggleButton:
                # populate from csv file
                # grey out if not available in CSV file
                text: 'Nomen'
                group: 'Wortart' # Populate from CSV heading

            ToggleButton:
                # populate from csv file
                # grey out if not available in CSV file
                text: 'Adjektiv'
                group: 'Wortart' # Populate from CSV heading

            ToggleButton:
                # populate from csv file
                # grey out if not available in CSV file
                text: 'Verb'
                group: 'Wortart' # Populate from CSV heading

            ToggleButton:
                # populate from csv file
                # grey out if not available in CSV file
                text: 'Andere'
                group: 'Wortart' # Populate from CSV heading

        Label:
            text: 'Lektion' # Populate from CSV or grey out if not available

        SpinBox:
            id: td_spin

<SpinBox>:
    orientation: 'horizontal'
    # ObjectProperty in py file
    # Needed to access PosIntInput from <Menu>
    output: pii
    PosIntInput:
        id: pii
        text: root.text_value
    Button:
        text: '+'
        on_press: root.plus()
    Button:
        text: '-'
        on_press: root.minus()

